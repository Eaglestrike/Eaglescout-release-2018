<nav class="blue darken-2">
    <div class="nav-wrapper container">
        <div class="col s12">
            <a href="/scout" class="breadcrumb">Scout</a>
            <a href="/scout/register" class="breadcrumb">Register</a>
        </div>
    </div>
</nav>

{{#if success_msg}}
<div class="row">
    <div class="info-message green white-text">
        {{success_msg}}
    </div>
</div>
{{/if}}

{{#if error_msg}}
<div class="row">
    <div class="info-message red darken-1 white-text">
        {{error_msg}}
    </div>
</div>
{{/if}}

{{#if error}}
<div class="row">
    <div class="info-message red darken-1 white-text">
        {{error}}
    </div>
</div>
{{/if}}

<div class="section no-pad-bot" id="index-banner">
	<div class="container">
		<h1 class="header center blue-text text-darken-4">Eaglescout &bull; Register User</h1>
		<br>
		{{#if errors}}
			{{#each errors}}
				<div class="row">
					<div class="info-message red darken-1 white-text">
						{{msg}}
					</div>
				</div>
			{{/each}}
		{{/if}}
		<div class="row center">
			<h5 class="header col s12 light">
				<div class="row center">
					<form class="center-input" method="post" action="/scout/register">
						<div class="container center">
							<div class="row">
								<div class="input-field">
									<input id="email" name="email" type="email" class="validate">
									<label for="email">Email</label>
								</div>
								<div class="input-field">
									<input id="password" name="password" type="password" class="validate">
									<label for="password">Password</label>
								</div>
								<div class="input-field">
									<input id="confirmPassword" name="confirmPassword" type="password" class="validate">
									<label for="confirmPassword">Confirm Password</label>
								</div>
							</div>
							<button class="btn waves-effect waves-light blue" type="submit" name="action">Register user</button>
						</div>
					</form>
				</div>
			</h5>
		</div>
	</div>
</div>