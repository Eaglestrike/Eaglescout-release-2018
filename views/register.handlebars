<nav class="blue darken-2">
	<div class="nav-wrapper container">
		<div class="col s12">
			<a href="/admin" class="breadcrumb">Admin</a>
			<a href="/admin/register" class="breadcrumb">Register</a>
		</div>
	</div>
</nav>

{{#if success_msg}}
<div class="section no-pad-bot" id="index-banner">
	<div class="container">
		<div class="row">
			<div class="info-message green white-text">
				{{success_msg}}
			</div>
		</div>
	</div>
</div>
{{/if}}

{{#if error_msg}}
<div class="section no-pad-bot" id="index-banner">
	<div class="container">
		<div class="row">
			<div class="info-message red darken-1 white-text">
				{{error_msg}}
			</div>
		</div>
	</div>
</div>
{{/if}}

{{#if error}}
<div class="section no-pad-bot" id="index-banner">
	<div class="container">
		<div class="row">
			<div class="info-message red darken-1 white-text">
				{{error}}
			</div>
		</div>
	</div>
</div>
{{/if}}

<div class="section no-pad-bot" id="index-banner">
	<div class="container">
		<h1 class="header center blue-text text-darken-4">Eaglescout<span class="bullet"> &bull; </span><span class="subtitle">Register User</span></h1>
		<br>
		{{#if errors}}
			{{#each errors}}
			<div class="row">
				<div class="info-message red darken-1 white-text">
					{{msg}}
				</div>
			</div>
			{{/each}}
		{{/if}}
		<div class="row center">
			<h5 class="header col s12 light">
				<div class="row center">
					<form class="center-input" method="post" action="/admin/register">
						<div class="container center">
							<div class="row">
								<div class="input-field">
									<input name="email" type="email" class="validate">
									<label for="email">Email</label>
								</div>
								<div class="input-field">
									<input name="password" type="password" class="validate">
									<label for="password">Password</label>
								</div>
								<div class="input-field">
									<input name="confirmPassword" type="password" class="validate">
									<label for="confirmPassword">Confirm Password</label>
								</div>
								<p id="admin-check">
									<input type="checkbox" class="filled-in" id="admin" name="admin" />
									<label for="admin">Admin Account</label>
								</p>
							</div>
							<button class="btn waves-effect waves-light red" type="submit" name="action">Register user</button>
						</div>
					</form>
				</div>
			</h5>
		</div>
	</div>
</div>