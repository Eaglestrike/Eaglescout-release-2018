<nav class="blue darken-2">
    <div class="nav-wrapper container">
        <div class="col s12">
            <a href="/admin" class="breadcrumb">Admin</a>
            <a href="/admin/event" class="breadcrumb">Change Event</a>
        </div>
    </div>
</nav>

{{#if success_msg}}
<div class="section no-pad-bot" id="index-banner">
    <div class="container">
        <div class="row">
            <div class="info-message green white-text">
                {{success_msg}}
            </div>
        </div>
    </div>
</div>
{{/if}}

{{#if error_msg}}
<div class="section no-pad-bot" id="index-banner">
    <div class="container">
        <div class="row">
            <div class="info-message red darken-1 white-text">
                {{error_msg}}
            </div>
        </div>
    </div>
</div>
{{/if}}

{{#if error}}
<div class="section no-pad-bot" id="index-banner">
    <div class="container">
        <div class="row">
            <div class="info-message red darken-1 white-text">
                {{error}}
            </div>
        </div>
    </div>
</div>
{{/if}}

<div class="section no-pad-bot" id="index-banner">
    <div class="container">
        <h1 class="header center blue-text text-darken-4">Eaglescout<span class="bullet"> &bull; </span><span class="subtitle">Change Event</span></h1>
        <br>
        {{#if errors}}
            {{#each errors}}
            <div class="row">
                <div class="info-message red darken-1 white-text">
                    {{msg}}
                </div>
            </div>
            {{/each}}
        {{/if}}
        <form method="post" action="/admin/event">
            <div class="input-field col s12">
                <select name="event">
                    {{#if currentlyCurrentEvent}}
                        <option value="" disabled selected>Choose event from list</option>
                    {{else}}
                        <option value="" disabled>Choose event from list</option>
                    {{/if}}

                    {{#if events}}
                        {{#each events}}
                            {{#if current }}
                                <option value="{{ key }}" selected>{{ name }}</option>
                            {{else}}
                                <option value="{{ key }}">{{ name }}</option>
                            {{/if}}
                        {{/each}}
                    {{/if}}
                </select>
            </div>
            <div class="center">
                <button class="btn waves-effect waves-light red" type="submit" name="action">Change Event</button>
            </div>
        </form>
        <br>
    </div>
</div>